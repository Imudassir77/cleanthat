{
    "syntax_version": "2",
    "meta": {
        "labels": [
            "cleanthat"
        ],
        "clean_pull_requests": true,
        "clean_main_branch": true
    },
    "source_code": {
        "includes": [
            "regex:.*\\.java"
        ],
        "excludes": [
            "regex:.*/generated/.*"
        ],
        "encoding": "UTF-8"
    },
    "languages": [
        {
            "language": "java",
            "language_version": "11",
            "processors": [
                {
                    "engine": "rules",
    				"source_code": {
				        "excludes": [
				            "regex:.*/src/test/java/eu/solven/cleanthat/rules/.*"
				        ]
				    }
                },
                {
                    "engine": "eclipse_formatter",
                    "parameters": {
                        "url": "https://raw.githubusercontent.com/solven-eu/pepper/master/static/src/main/resources/eclipse/eclipse_java_code_formatter.xml"
                    }
                },
                {
                    "engine": "revelc_imports",
                    "parameters": {
                        "remove_unused": true,
                        "groups": "java.,javax.,org.,com.",
                        "static_groups": "java,*"
                    }
                }
            ]
        }
    ]
}